/////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Prisma schema file
// Reference doc: https://www.prisma.io/docs/concepts/components/prisma-schema
/////////////////////////////////////////////////////////////////////////////////////////////////////////////

// @db.Timestamptz(3) is a native database type for PostgreSQL
// documentation: https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#postgresql-6
// the (3) corresponds to the precision: https://www.postgresqltutorial.com/postgresql-tutorial/postgresql-time/

generator client {
    provider = "prisma-client-js"
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// Data sources
/// Reference: https://www.prisma.io/docs/concepts/components/prisma-schema/data-sources
/////////////////////////////////////////////////////////////////////////////////////////////////////////////

datasource db {
    provider = "postgresql"
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// NextAuth data model
/// Reference: https://github.com/hexrcs/prisma-next-auth/blob/master/prisma/schema.prisma
/////////////////////////////////////////////////////////////////////////////////////////////////////////////
model Account {
  id                 String    @id @default(cuid())
  userId             String    @map("user_id")
  type               String    @map("type")
  provider           String    @map("provider")
  providerAccountId  String    @map("provider_account_id")
  refreshToken       String?   @map("refresh_token") @db.Text
  accessToken        String?   @map("access_token") @db.Text
  expires_at         Int?      @map("expires_at")
  token_type         String?   @map("token_type")
  scope              String?   @map("scope")
  id_token           String?   @map("id_token") @db.Text
  session_state      String?   @map("session_state")
  createdAt          DateTime  @db.Timestamptz(3) @default(now()) @map("created_at")
  updatedAt          DateTime  @db.Timestamptz(3) @default(now()) @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])

  @@index([provider], name: "idx_account_provider")
  @@index([providerAccountId], name: "idx_account_provider_account_id")
  @@index([userId], name: "idx_account_user_id")
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken], name: "idx_session_session_token")
  @@map("sessions")
}

model User {
  id            String             @id @default(cuid())
  name          String?            @unique @default("")
  givenName     String             @default("") @map("given_name")
  familyName    String             @default("") @map("family_name")
  email         String?            @unique @default("")
  emailVerified DateTime?          @map("email_verified")
  userRole      KnowiiUserRole     @default(USER) @map("user_role")
  image         String?
  accounts      Account[]
  sessions      Session[]
  ownerOf       Community[]        @relation(name: "community_owners")
  adminOf       Community[]        @relation(name: "community_admins")
  memberOf      Community[]        @relation(name: "community_members")
  createdAt     DateTime           @db.Timestamptz(3) @default(now()) @map("created_at")
  updatedAt     DateTime           @db.Timestamptz(3) @default(now()) @updatedAt @map("updated_at")

  @@index([email], name: "idx_user_email")
  @@map("users")
}

model VerificationRequest {
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([token], name: "idx_verification_request_token")
  @@map("verification_requests")
}

/////////////////////////////////////////////////////////////////////////////////////////////////////////////
/// App Data model
/////////////////////////////////////////////////////////////////////////////////////////////////////////////

enum KnowiiUserRole {
  USER
  ADMIN
}

model Community {
  id            String             @id @default(cuid())
  name          String             @unique @default("")
  description   String             @default("") @map("given_name")
  owners        User[]             @relation(name: "community_owners")
  admins        User[]             @relation(name: "community_admins")
  members       User[]             @relation(name: "community_members")
  createdAt     DateTime           @db.Timestamptz(3) @default(now()) @map("created_at")
  updatedAt     DateTime           @db.Timestamptz(3) @default(now()) @updatedAt @map("updated_at")

  @@index([name], name: "idx_community_name")
  @@map("community")
}

